<%- include("partials/header") -%>
<%- include("partials/navbar") -%>
<link rel="stylesheet" href="/css/showquestion.css">
<div class="container mt-5">
    <div class="general">
        <h1><%=question.title%></h1>
        <hr>
        <strong>Question text:</strong>
        <%=question.question%>
    </div>
    <% switch(question.type){
        case "multiplechoice":{ %>
            <div>
                <div class="general">
                    <strong>Current Answers:</strong>
                </div>
                <ul class="multiplechoice">
                <% question.possibleAnswers.forEach(function(answer, index){ %>
                    <li class="multiplechoice"><%=answer%></li>
                <% }); %>
                </ul>
            </div>
            <% break;
        }
        case "text": {
            console.log("we found text");
            break;
        }
        default: {
            console.log("unknown type: " + question.type);
            break;
        }
    } %>
    <div class="general">
        <div class="d-flex justify-content-between">
            <a href="/questions/<%=question._id%>/edit">
                <button type="button" class="btn btn-form">Edit Question</button type="button">
            </a>
            <form action="/questions/<%=question._id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger mt-10 mr-4">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") -%>
