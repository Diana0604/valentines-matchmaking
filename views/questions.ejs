<%- include("partials/header") -%>
<%- include("partials/navbar") -%>
<link rel="stylesheet" href="css/questions.css">
<div class="container mt-5">
    <h1>List of Questions: </h1>
    <% questions.forEach(function(question){ %>
        <div class="question">
            <h2><%= question.title %></h2>
            <hr>
            <h5>Question: <%= question.question %></h5>
            <h5>Type: <%=question.type %></h5>
            <a href="/questions/<%=question._id%>">
                <button type="button" class="btn">Show Question</button>
            </a>
            <a href="/questions/<%=question._id%>/edit">
                <button type="button" class="btn">Edit Question</button type="button">
            </a>
        </div>
    <% })%>
</div>
<%- include("partials/footer") -%>